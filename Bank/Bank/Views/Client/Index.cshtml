@model List<Bank.Models.Karzina>
@{
    ViewBag.Title = "Корзина";
}
<link rel="stylesheet" href="~/css/StyleHome.css" asp-append-version="true" />
<h1 class="cart-title">Корзина</h1>
<style>
  

    /* Заголовок корзины */
    .cart-title {
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-weight: bold;
    }

    /* Таблица корзины */
    .cart-table {
        width: 100%;
        border-spacing: 0;
        border-collapse: collapse;
        margin-bottom: 30px;
        background-color: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        table-layout: fixed; /* Фиксация верстки таблицы */
    }

        .cart-table th, .cart-table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            vertical-align: middle; /* Центровка содержимого по вертикали */
            word-wrap: break-word; /* Слово переносится, если слишком длинное */
        }

        .cart-table th {
            background-color: #f5f5f5;
            font-size: 1.2rem;
            color: #555;
            text-transform: uppercase;
        }

        .cart-table td {
            font-size: 1rem;
            color: #333;
        }

    /* Картинка продукта - отключено обрезание */
    .product-img {
        width: 150px; /* Оптимальная ширина */
        height: 150px; /* Оптимальная высота */
        border: 1px solid #ddd;
        border-radius: 5px;
        object-fit: contain; /* Полное изображение отображается */
        background-color: #fff; /* Фон под картинкой */
    }

    /* Имя продукта */
    .product-name {
        font-weight: bold;
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 5px;
    }

    /* Цена продукта */
    .product-price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #28a745;
    }

    /* Описание продукта */
    .product-description {
        font-size: 0.9rem;
        color: #777;
    }

    /* Кнопка "Удалить" */
    .remove-btn {
        background-color: #ff5f5f;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 25px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .remove-btn:hover {
            background-color: #ff2d2d;
        }

    /* Общая стоимость */
    .total-price {
        font-size: 1.8rem;
        font-weight: bold;
        text-align: right;
        margin-top: 30px;
        color: #333;
    }

    /* Кнопка оформления заказа */
    .checkout-btn {
        display: block;
        text-align: center;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        padding: 15px 30px;
        border-radius: 5px;
        font-size: 1.2rem;
        width: 200px;
        margin: 0 auto;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .checkout-btn:hover {
            background-color: #0056b3;
        }

    /* Дополнительное расстояние между строками таблицы */
    .cart-table tr {
        height: auto;
        min-height: 150px; /* Минимальная высота строки */
    }

    /* Пример, если контейнер слишком узкий. Горизонтальный скролл */
    .cart-container {
        overflow-x: auto;
    }
</style>
<table class="cart-table">
    <thead>
        <tr>
            <th>Изображение</th>
            <th>Название</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl"
                         class="product-img">
                </td>
                <td class="product-name">@item.BrandName</td>
                <td class="product-price">@item.Price руб.</td>
                <td class="product-description">@item.Description</td>
                <td>
                    <form action="/Client/RemoveFromCart/@item.Id" method="post">
                        <button type="submit" class="remove-btn">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2 class="total-price">Общая стоимость: @ViewBag.TotalPrice руб.</h2>
<a href="/Account/Profile" class="checkout-btn">Оформить заказ</a>

